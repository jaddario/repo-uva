		this.código = código;
		this.descrição = descrição;
		this.precoDeCusto = precoDeCusto;
	}
	//que deverá alterar a margem de lucro e calcular o preço de venda correspondente.
	void setMargemLucro(float percentual)
	
	void setPrecoVenda(float valor)
}
