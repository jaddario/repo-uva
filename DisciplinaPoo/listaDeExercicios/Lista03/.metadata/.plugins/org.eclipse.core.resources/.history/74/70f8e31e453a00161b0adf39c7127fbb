
public class Numero {
	private float numero;

	public Numero(float numero) {
		this.numero = numero;
	}

	public float fatorial() {
		float fatorialDoNumero = 1;
		for (float i = this.numero; i >= 1; i--) {
			fatorialDoNumero *= i;
		}
		return fatorialDoNumero;
	}
	
	public float potencia(int potencia){
		return (float) Math.pow(numero, potencia);
	}

}
